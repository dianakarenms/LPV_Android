<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/fondo_grecas"
              android:weightSum="10"
              android:layout_marginBottom="-10dp">

    <include layout="@layout/toolbar_full" />

    <!--<android.support.v4.view.ViewPager
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.4"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.4">

        <android.support.v4.view.ViewPager
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
        <android.support.design.widget.TabLayout
            android:id="@+id/tabDots"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/legends_title"
        android:textColor="@color/dark_gray"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_marginLeft="@dimen/small_padding"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <ImageButton
            android:id="@+id/leyendas_prev_btn"
            android:layout_width="25dp"
            android:layout_height="33dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/left_arrow"
            android:tint="@color/gray"
            android:scaleType="fitXY"
            android:background="@null"
            android:onClick="arrowsNavOnClick"
            android:visibility="invisible"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/leyendas_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/leyendas_prev_btn"
            android:layout_toEndOf="@id/leyendas_prev_btn"
            android:layout_toLeftOf="@+id/leyendas_next_btn"
            android:layout_toStartOf="@+id/leyendas_next_btn"/>
        <ImageButton
            android:id="@+id/leyendas_next_btn"
            android:layout_width="25dp"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow"
            android:tint="@color/gray"
            android:scaleType="fitXY"
            android:background="@null"
            android:onClick="arrowsNavOnClick"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/medium_gray"
        android:layout_margin="@dimen/mini_padding"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/collections_title"
        android:textColor="@color/dark_gray"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_marginLeft="@dimen/small_padding"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <ImageButton
            android:id="@+id/colecciones_prev_btn"
            android:layout_width="25dp"
            android:layout_height="33dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/left_arrow"
            android:tint="@color/gray"
            android:scaleType="fitXY"
            android:background="@null"
            android:onClick="arrowsNavOnClick"
            android:visibility="invisible"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/colecciones_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/colecciones_prev_btn"
            android:layout_toEndOf="@id/colecciones_prev_btn"
            android:layout_toLeftOf="@+id/colecciones_next_btn"
            android:layout_toStartOf="@+id/colecciones_next_btn"/>
        <ImageButton
            android:id="@+id/colecciones_next_btn"
            android:layout_width="25dp"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow"
            android:tint="@color/gray"
            android:scaleType="fitXY"
            android:background="@null"
            android:onClick="arrowsNavOnClick"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6">
        <ImageView
            android:id="@+id/mi_barquitoo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/nino_barco"/>

    </RelativeLayout>

    <!-- Bottom Nav Bar -->
    <!--<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3">
        <include
            layout="@layout/bottom_nav_bar" />
    </FrameLayout>-->
</LinearLayout>