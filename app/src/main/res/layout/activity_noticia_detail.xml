<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/fondo_grecas">

    <include layout="@layout/toolbar_full" />

    <com.clickaboom.letrasparavolar.views.StickyScrollView
        android:id="@+id/nested_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <!-- Info -->
        <LinearLayout
            android:id="@+id/info_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="visible">
            <TextView
                android:id="@+id/titleTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/medium_padding"
                android:paddingRight="@dimen/medium_padding"
                android:paddingLeft="@dimen/medium_padding"
                android:text="@string/program_title"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:gravity="left"/>
            <TextView
                android:id="@+id/dateTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/medium_padding"
                android:text="Universidad de Guadalajara"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:gravity="left"/>
            <ImageView
                android:id="@+id/coverImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:scaleType="centerInside"
                android:clickable="false"
                android:src="@drawable/nino_info"/>
            <TextView
                android:id="@+id/descriptionTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/medium_padding"
                android:text="@string/program_description"
                android:textSize="@dimen/medium_small"
                android:gravity="left"/>
        </LinearLayout>
    </com.clickaboom.letrasparavolar.views.StickyScrollView>

    <!-- Bottom Nav Bar -->
    <!--<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3">
        <include
            layout="@layout/bottom_nav_bar" />
    </FrameLayout>-->
</LinearLayout>