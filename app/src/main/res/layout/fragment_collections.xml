<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/pattern_fondo">

    <include layout="@layout/toolbar_asistant"/>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="10"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/collections_nav"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:orientation="horizontal"
                            android:weightSum="5"
                            android:gravity="center">
                            <com.clickaboom.letrasparavolar.views.SquareImageButtonWidth
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:src="@drawable/poesia"
                                android:adjustViewBounds="true"
                                android:scaleType="centerInside"
                                android:background="@null"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:text="@string/poesia"
                            android:textColor="@color/white"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:orientation="horizontal"
                            android:weightSum="5"
                            android:gravity="center">
                            <com.clickaboom.letrasparavolar.views.SquareImageButtonWidth
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:src="@drawable/ensayo"
                                android:adjustViewBounds="true"
                                android:scaleType="centerInside"
                                android:background="@null"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:text="@string/ensayo"
                            android:textColor="@color/white"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:orientation="horizontal"
                            android:weightSum="5"
                            android:gravity="center">
                            <com.clickaboom.letrasparavolar.views.SquareImageButtonWidth
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:src="@drawable/narrativa"
                                android:adjustViewBounds="true"
                                android:scaleType="centerInside"
                                android:background="@null"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:text="@string/narrativa"
                            android:textColor="@color/white"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:orientation="horizontal"
                            android:weightSum="5"
                            android:gravity="center">
                            <com.clickaboom.letrasparavolar.views.SquareImageButtonWidth
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:src="@drawable/amigos"
                                android:adjustViewBounds="true"
                                android:scaleType="centerInside"
                                android:background="@null"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="@string/amigos"
                            android:textColor="@color/white"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:gravity="center"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:weightSum="4"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:text="@string/nuevas"
                            android:textColor="@color/white"
                            android:textSize="@dimen/mini_text"
                            android:textStyle="bold"
                            android:background="@drawable/nav_subcategories_button"
                            android:gravity="center"
                            android:textAllCaps="true"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:text="@string/populares"
                            android:textColor="@color/white"
                            android:textSize="@dimen/mini_text"
                            android:textStyle="bold"
                            android:background="@drawable/nav_subcategories_button"
                            android:gravity="center"
                            android:textAllCaps="true"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:text="@string/tema_del_mes"
                            android:textColor="@color/white"
                            android:textSize="@dimen/mini_text"
                            android:textStyle="bold"
                            android:background="@drawable/nav_subcategories_button"
                            android:gravity="center"
                            android:textAllCaps="true"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:text="@string/todos"
                            android:textSize="@dimen/mini_text"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:background="@drawable/nav_subcategories_button"
                            android:gravity="center"
                            android:textAllCaps="true"/>
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/collections_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>

    <!-- Bottom Nav Bar -->
    <!--<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3">
        <include
            layout="@layout/bottom_nav_bar" />
    </FrameLayout>-->
</LinearLayout>